{
  "description": "Automated memory capture and sync for Mem0-backed project memory",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "description": "Initialize Mem0 plugin environment for the session",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/init-session.sh",
        "args": ["${CLAUDE_PROJECT_DIR}"],
        "timeout": 10,
        "enabled": true
      }
    ],
    "SessionEnd": [
      {
        "type": "command",
        "description": "Capture session summary and key insights into Mem0",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/summarize-session.sh",
        "args": ["${CLAUDE_PROJECT_DIR}"],
        "timeout": 60,
        "enabled": true
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "description": "Track significant code changes for memory sync",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/track-change.sh",
            "args": ["${CLAUDE_PROJECT_DIR}"],
            "timeout": 5,
            "throttle": 60,
            "enabled": true
          }
        ]
      },
      {
        "matcher": "mcp__mem0__.*",
        "hooks": [
          {
            "type": "command",
            "description": "Log Mem0 interactions for debugging",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/log-mem0-call.sh",
            "timeout": 3,
            "enabled": false
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "description": "Quick capture of important context on manual stop",
        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/summarize-session.sh",
        "args": ["${CLAUDE_PROJECT_DIR}", "--quick"],
        "timeout": 30,
        "enabled": true
      }
    ]
  }
}
